<div class="login-signup-card">
    <h2 class="card-heading">Login</h2>
    <form class="form login-form">
        <div class="form-group">
            <label for="username-login">Username:</label>
            <input class="form-input" type="text" id="username-login" />
        </div>
        <div class="form-group">
            <label for="password-login">Password :</label>
            <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
            <button id="loginBtn" class="btn btn-primary login-signup-btn" type="submit">Login!</button>
        </div>
    </form>
</div>


